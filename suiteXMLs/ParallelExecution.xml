<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RegressionSuite" parallel="tests">

<parameter name="url" value="https://opensource-demo.orangehrmlive.com"></parameter>
  <test thread-count="5" name="RegressionTest_chrome">
  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="com.satwa.tests.OrangeHRMTests">
      	<methods>
      		<include name="createAnEmployee"></include>
      		
      	</methods>
      </class>
     
    </classes>
  </test> 
  <test thread-count="5" name="RegressionTest_firefox">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="com.satwa.tests.OrangeHRMTests">
      	<methods>
      		<include name="createAnEmployee"></include>
      		
      	</methods>
      </class>
     
    </classes>
  </test> 
  <test thread-count="5" name="RegressionTest_edge">
  <parameter name="browser" value="edge"></parameter>
    <classes>
      <class name="com.satwa.tests.OrangeHRMTests">
      	<methods>
      		<include name="createAnEmployee"></include>
      		
      	</methods>
      </class>
     
    </classes>
  </test> 
</suite>
            